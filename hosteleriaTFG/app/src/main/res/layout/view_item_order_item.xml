<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:background="#00F6F6F6"
                                                   android:paddingBottom="30dp">
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewUsuariosOrderItem"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp" android:layout_marginStart="10dp" android:paddingRight="5dp"/>
    <TextView
            android:text="TextView"
            android:textSize="20dp"
            android:maxWidth="230dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewProductoItemHolder"
            app:layout_constraintTop_toBottomOf="@+id/textViewUsuariosOrderItem"
            android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"/>
    <TextView
            android:text="5"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewPrecioItemHolder"
            app:layout_constraintTop_toTopOf="@+id/textViewPor"
            app:layout_constraintStart_toEndOf="@+id/textViewPor"
            android:layout_marginStart="10dp"/>
    <TextView
            android:text="x"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewPor"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="75dp"
            app:layout_constraintTop_toTopOf="@+id/textViewProductoItemHolder"/>
    <TextView
            android:text="3"
            android:textSize="20dp"
            android:textAlignment="textEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewCantidadItemHolder"
            app:layout_constraintEnd_toStartOf="@+id/textViewPor"
            android:layout_marginEnd="10dp" app:layout_constraintTop_toTopOf="@+id/textViewPor"/>

</androidx.constraintlayout.widget.ConstraintLayout>